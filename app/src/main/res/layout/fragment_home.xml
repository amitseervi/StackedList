<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeContentFragment">

    <com.amit.stackedlist.view.StackContainer
        android:id="@+id/stack_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cta_show_next_stack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.amit.stackedlist.view.StackItemView
            android:id="@+id/stack_item_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.amit.stackedlist.view.CollapsedViewContainer
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/collapsed_emi_select"
                    layout="@layout/layout_selected_emi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.amit.stackedlist.view.CollapsedViewContainer>

            <com.amit.stackedlist.view.ExpandedViewContainer
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/expanded_emi_select"
                    layout="@layout/layout_select_emi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.amit.stackedlist.view.ExpandedViewContainer>
        </com.amit.stackedlist.view.StackItemView>

        <com.amit.stackedlist.view.StackItemView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.amit.stackedlist.view.CollapsedViewContainer
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hello world 2"
                    android:textSize="28sp" />
            </com.amit.stackedlist.view.CollapsedViewContainer>

            <com.amit.stackedlist.view.ExpandedViewContainer
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expanded content of hello world 2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.amit.stackedlist.view.ExpandedViewContainer>
        </com.amit.stackedlist.view.StackItemView>


        <com.amit.stackedlist.view.StackItemView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.amit.stackedlist.view.CollapsedViewContainer
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hello world 3"
                    android:textSize="28sp" />
            </com.amit.stackedlist.view.CollapsedViewContainer>

            <com.amit.stackedlist.view.ExpandedViewContainer
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expanded content of hello world 3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.amit.stackedlist.view.ExpandedViewContainer>
        </com.amit.stackedlist.view.StackItemView>

        <com.amit.stackedlist.view.StackItemView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.amit.stackedlist.view.CollapsedViewContainer
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hello world 4"
                    android:textSize="28sp" />
            </com.amit.stackedlist.view.CollapsedViewContainer>

            <com.amit.stackedlist.view.ExpandedViewContainer
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expanded content of hello world 4"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.amit.stackedlist.view.ExpandedViewContainer>
        </com.amit.stackedlist.view.StackItemView>
    </com.amit.stackedlist.view.StackContainer>

    <Button
        android:id="@+id/cta_show_previous_stack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Previous"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cta_show_next_stack"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cta_show_next_stack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cta_show_previous_stack" />
</androidx.constraintlayout.widget.ConstraintLayout>