<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColorTertionary"
    tools:context=".HomeContentFragment">

    <com.amit.stackedlist.view.StackContainer
        android:id="@+id/stack_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:stackAnimationDuration="300">

        <com.amit.stackedlist.view.StackItemView
            android:id="@+id/stack_item_1"
            style="@style/stack_item_style_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.amit.stackedlist.view.CollapsedViewContainer
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/collapsed_emi_select"
                    layout="@layout/layout_selected_emi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.amit.stackedlist.view.CollapsedViewContainer>

            <com.amit.stackedlist.view.ExpandedViewContainer
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/expanded_emi_select"
                    layout="@layout/layout_select_emi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.amit.stackedlist.view.ExpandedViewContainer>
        </com.amit.stackedlist.view.StackItemView>

        <com.amit.stackedlist.view.StackItemView
            android:id="@+id/stack_item_2"
            style="@style/stack_item_style_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.amit.stackedlist.view.CollapsedViewContainer
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/collapsed_emi_option_select"
                    layout="@layout/layout_emi_rate_option_selected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.amit.stackedlist.view.CollapsedViewContainer>

            <com.amit.stackedlist.view.ExpandedViewContainer
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/expanded_emi_option_select"
                    layout="@layout/layout_select_emi_rate_option"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.amit.stackedlist.view.ExpandedViewContainer>
        </com.amit.stackedlist.view.StackItemView>


        <com.amit.stackedlist.view.StackItemView
            android:id="@+id/stack_item_3"
            style="@style/stack_item_style_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.amit.stackedlist.view.ExpandedViewContainer
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/expanded_select_bank_account"
                    layout="@layout/layout_select_bank_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.amit.stackedlist.view.ExpandedViewContainer>
        </com.amit.stackedlist.view.StackItemView>
    </com.amit.stackedlist.view.StackContainer>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cta_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/cta_button_background"
        android:paddingVertical="12dp"
        android:text="@string/proceed_to_emi_option"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>